<UserControl x:Class="Attendence_Counter_ALPHA.StudentEditorRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Attendence_Counter_ALPHA"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal" >

        <TextBox Name="rollNoBox" VerticalAlignment="Center" Width="60" Margin="5" HorizontalContentAlignment="Center"></TextBox>
        <Line X1="2" Y1="15"  Height="15" Width="1" Stroke="Black" StrokeThickness="25"/>
        <TextBox Name="nameBox" VerticalAlignment="Center" Width="120" Margin="5" HorizontalContentAlignment="Center" ></TextBox>

        <StackPanel Name="edtStk" Orientation="Horizontal"/>
        <Line X1="2" Y1="30"  Height="30" Width="2" Stroke="Black" StrokeThickness="25" Margin="5"/>
        <Button Name="confirmChange" Height="20" Width="60" Content="Confirm" Margin="5"/>
    </StackPanel>
</UserControl>
