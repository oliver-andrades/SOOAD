<UserControl x:Class="Attendence_Counter_ALPHA.StudentRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Attendence_Counter_ALPHA"
             mc:Ignorable="d" >
    
    <StackPanel Orientation="Horizontal" >

        <Label Name="idLabel" VerticalAlignment="Center" Width="60" Margin="2" HorizontalContentAlignment="Center"></Label>
        <Line X1="2" Y1="15"  Height="15" Width="1" Stroke="Black" StrokeThickness="25"/>
        <Label Name="nameLabel" VerticalAlignment="Center" Width="120" Margin="5" HorizontalContentAlignment="Center"></Label>

        <StackPanel Name="attStk" Orientation="Horizontal"/>
        <Line X1="2" Y1="30"  Height="30" Width="2" Stroke="Black" StrokeThickness="50"/>
        <Label Name="percentTotalLabel" VerticalAlignment="Center" Width="60" Margin="5" BorderThickness="2" BorderBrush="Red" >Total %</Label>

    </StackPanel>
</UserControl>
